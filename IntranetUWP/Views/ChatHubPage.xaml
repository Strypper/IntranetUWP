<Page
    x:Class="IntranetUWP.Views.ChatHubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntranetUWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls" 
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d" Loaded="Page_Loaded"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <SplitView x:Name="splitViewPane" DisplayMode="CompactInline" PanePlacement="Left"
               CompactPaneLength="48" HorizontalAlignment="Stretch" IsPaneOpen="True">
        <SplitView.Pane>
            <StackPanel>
                <controls:DockPanel HorizontalAlignment="Stretch" LastChildFill="True" VerticalAlignment="Top">
                    <Button Content="&#xE25C;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" HorizontalAlignment="Right" Background="Transparent" Click="HamburgerButton_Click"
                        FontSize="20" CornerRadius="0" controls:DockPanel.Dock="Left" Margin="5"/>
                    <TextBlock Text="Chat Hub" Margin="5" VerticalAlignment="Center" FontWeight="Bold" controls:DockPanel.Dock="Right"/>
                </controls:DockPanel>
                <controls:DockPanel HorizontalAlignment="Stretch" LastChildFill="True" VerticalAlignment="Top">
                    <Button x:Name="AddChannel" Content="&#xE109;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" HorizontalAlignment="Right" Background="Transparent"
                        FontSize="20" CornerRadius="0" controls:DockPanel.Dock="Left" Margin="5" Click="AddChannel_Click"/>
                    <TextBlock Text="Create Channel" Margin="5" VerticalAlignment="Center" controls:DockPanel.Dock="Right"/>
                </controls:DockPanel>
                <winui:TreeView x:Name="sampleTreeView" ItemsSource="{x:Bind DataSource}" HorizontalAlignment="Stretch" 
                                CanDrag="False" AllowDrop="False" CanReorderItems="False" CanDragItems="False">
                    <winui:TreeView.ItemContainerTransitions>
                        <TransitionCollection>
                            <ContentThemeTransition />
                            <AddDeleteThemeTransition />
                        </TransitionCollection>
                    </winui:TreeView.ItemContainerTransitions>
                    <winui:TreeView.ItemTemplate>
                        <DataTemplate x:DataType="local:ExplorerItem">
                            <winui:TreeViewItem AutomationProperties.Name="{x:Bind Name}" HorizontalAlignment="Stretch"
                                                ItemsSource="{x:Bind Children}" IsExpanded="True">
                                <controls:DockPanel LastChildFill="False" HorizontalAlignment="Stretch">
                                    <TextBlock Text="{x:Bind Name}" VerticalAlignment="Center" controls:DockPanel.Dock="Left" Margin="14,0,0,0"/>
                                    <Button Content="&#xE109;" FontFamily="Segoe MDL2 Assets" Visibility="{x:Bind IsVisisbleAddButton}"
                                            Margin="14,0,0,0" controls:DockPanel.Dock="Right" Background="Transparent"/>
                                </controls:DockPanel>
                            </winui:TreeViewItem>
                        </DataTemplate>
                    </winui:TreeView.ItemTemplate>
                </winui:TreeView>
            </StackPanel>
        </SplitView.Pane>
        <SplitView.Content>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <ListView ItemsSource="{x:Bind ChatMessages}">
                    <ListView.Header>
                        <TextBlock Text="IDev General Chat" FontSize="25" FontWeight="Bold" Margin="5"/>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:ChatMessage">
                            <StackPanel>
                                <TextBlock Text="{x:Bind UserName}"/>
                                <TextBlock Text="{x:Bind Message}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Grid VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="MessageTextBox" PlaceholderText="Text message" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5"/>
                    <Button Grid.Column="1" Content="Send" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,5,5,5"/>
                </Grid>
            </Grid>
        </SplitView.Content>
    </SplitView>
</Page>
