<Page
    x:Class="IntranetUWP.Views.ChatHubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntranetUWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls" 
    xmlns:winui="using:Microsoft.UI.Xaml.Controls" 
    xmlns:DTO="using:IntranetUWP.Models" 
    xmlns:media="using:Microsoft.UI.Xaml.Media" xmlns:helpers="using:IntranetUWP.Helpers"
    NavigationCacheMode="Enabled"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <media:AcrylicBrush x:Key="CustomAcrylicInAppLuminosity"
                                BackgroundSource="Backdrop"
                                TintOpacity="0" 
                                TintLuminosityOpacity="0.270000012824312" 
                                TintColor="SkyBlue" 
                                FallbackColor="SkyBlue" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Image x:Name="BackgroundImage"
               Stretch="UniformToFill">
            <Image.Triggers>
                <EventTrigger>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="BackgroundImage" 
                                             Storyboard.TargetProperty="Opacity" 
                                             From="0" To="1" Duration="0:0:4">
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>
        <SplitView x:Name="splitViewPane" 
               DisplayMode="CompactInline" 
               PanePlacement="Left"
               CompactPaneLength="55" 
               HorizontalAlignment="Stretch" 
               IsPaneOpen="True"
               Margin="5"
               PaneBackground="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
               CornerRadius="5">
            <SplitView.Pane>
                <StackPanel 
                        Background="{StaticResource CustomAcrylicInAppLuminosity}"
                        HorizontalAlignment="Stretch">
                    <controls:DockPanel HorizontalAlignment="Stretch" 
                                    LastChildFill="True" 
                                    VerticalAlignment="Top">
                        <Button FontFamily="Segoe MDL2 Assets" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Right" 
                            Background="Transparent" 
                            Click="HamburgerButton_Click"
                            FontSize="25"
                            Margin="5"
                            controls:DockPanel.Dock="Left">
                            <SymbolIcon Symbol="Comment" />
                        </Button>
                        <TextBlock Text="Chat Hub" 
                               Margin="5" 
                               VerticalAlignment="Center" 
                               FontWeight="Bold" 
                               controls:DockPanel.Dock="Right"/>
                    </controls:DockPanel>
                    <controls:DockPanel HorizontalAlignment="Stretch" 
                                    LastChildFill="True" 
                                    VerticalAlignment="Top">
                        <Button x:Name="AddChannel" 
                            FontFamily="Segoe MDL2 Assets" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Right" 
                            Background="{ThemeResource SystemAccentColor}"
                            FontSize="25" 
                            Margin="5"
                            controls:DockPanel.Dock="Left"
                            Click="AddChannel_Click">
                            <SymbolIcon Symbol="Add" />
                        </Button>
                        <TextBlock Text="Create Channel" 
                               Margin="5" 
                               VerticalAlignment="Center" 
                               controls:DockPanel.Dock="Right"/>
                    </controls:DockPanel>
                    <winui:TreeView x:Name="sampleTreeView" 
                                ItemsSource="{x:Bind DataSource}" 
                                HorizontalAlignment="Stretch"
                                CanDrag="False" 
                                AllowDrop="False" 
                                CanReorderItems="False" 
                                CanDragItems="False">
                        <winui:TreeView.ItemContainerTransitions>
                            <TransitionCollection>
                                <ContentThemeTransition />
                                <AddDeleteThemeTransition />
                            </TransitionCollection>
                        </winui:TreeView.ItemContainerTransitions>
                        <winui:TreeView.ItemTemplate>
                            <DataTemplate x:DataType="local:ExplorerItem">
                                <winui:TreeViewItem Grid.Column="0" 
                                                AutomationProperties.Name="{x:Bind Name}"
                                                HorizontalAlignment="Stretch"
                                                ItemsSource="{x:Bind Children}"
                                                IsExpanded="True">
                                    <StackPanel Orientation="Horizontal">
                                        <Button
                                        Content="{x:Bind IconProp}"
                                        FontSize="18"
                                        Foreground="{x:Bind Color}"
                                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        Click="Emoji_Click">
                                            <Button.Flyout>
                                                <Flyout>
                                                    <StackPanel>
                                                        <Button Margin="5">
                                                            <SymbolIcon Symbol="Setting"/>
                                                        </Button>
                                                        <Button Margin="5">
                                                            <SymbolIcon Symbol="PostUpdate"/>
                                                        </Button>
                                                    </StackPanel>
                                                </Flyout>
                                            </Button.Flyout>
                                        </Button>
                                        <TextBlock Text="{x:Bind Name}" 
                                               VerticalAlignment="Center" 
                                               controls:DockPanel.Dock="Left"/>
                                    </StackPanel>
                                </winui:TreeViewItem>
                            </DataTemplate>
                        </winui:TreeView.ItemTemplate>
                    </winui:TreeView>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <ListView x:Name="ChatList"
                          SelectionMode="Extended"
                          LostFocus="ChatList_LostFocus"
                          ItemsSource="{x:Bind vm.ChatMessages, Mode=TwoWay}">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel ItemsUpdatingScrollMode="KeepLastItemInView"
                              VerticalAlignment="Bottom"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.Header>
                            <TextBlock Text="IDev General Chat" FontSize="25" FontWeight="Bold" Margin="5">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform x:Name="TranslateTitle"/>
                                </TextBlock.RenderTransform>
                                <TextBlock.Triggers>
                                    <EventTrigger>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="TranslateTitle" Storyboard.TargetProperty="Y" From="-200" To="0">
                                                    <DoubleAnimation.EasingFunction>
                                                        <CircleEase EasingMode="EaseInOut" />
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </TextBlock.Triggers>
                            </TextBlock>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="DTO:ChatMessageDTO">
                                <ListViewItem HorizontalAlignment="{x:Bind IsFromSelf, Converter={StaticResource BoolToFrameworkAlignmentConverter}}"
                                          HorizontalContentAlignment="Left" Margin="5">
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,10" CornerRadius="5"
                                          Background="{ThemeResource CustomAcrylicInAppLuminosity}">
                                        <PersonPicture ProfilePicture="{x:Bind ProfilePic, Converter={StaticResource StringToImageSourceConverter}}" 
                                                   VerticalAlignment="Top" Width="50" Margin="5"
                                                   Visibility="{x:Bind IsFromSelf, Converter={StaticResource ReverseBoolToVisibilityConverter}}"/>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{x:Bind UserName}" FontWeight="Bold" TextDecorations="Underline" Margin="5,5,5,0"
                                                       HorizontalAlignment="{x:Bind IsFromSelf, Converter={StaticResource BoolToFrameworkAlignmentConverter}}"/>
                                            <TextBlock Text="{x:Bind MessageContent}" TextWrapping="WrapWholeWords" 
                                                       IsTextSelectionEnabled="True"
                                                       MaxWidth="700" Margin="5,5,5,0"
                                                       HorizontalAlignment="{x:Bind IsFromSelf, Converter={StaticResource BoolToFrameworkAlignmentConverter}}"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="{x:Bind IsFromSelf, Converter={StaticResource BoolToFrameworkAlignmentConverter}}">
                                                <SymbolIcon Symbol="Clock" VerticalAlignment="Bottom" Margin="5"/>
                                                <TextBlock VerticalAlignment="Bottom" Text="{x:Bind SentTime}" Margin="0,5,5,5"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <PersonPicture ProfilePicture="{x:Bind ProfilePic, Converter={StaticResource StringToImageSourceConverter}}" 
                                                   VerticalAlignment="Top" Width="50" Margin="5" 
                                                   Visibility="{x:Bind IsFromSelf, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </ListViewItem>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <Grid VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="0.1*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="MessageTextBox" 
                                 PlaceholderText="Text message" 
                                 Text="{x:Bind vm.MessContent, Mode=TwoWay}"
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Stretch" 
                                 Margin="5" 
                                 Height="40"
                                 FontSize="15"
                                 Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}">
                            <TextBox.KeyboardAccelerators>
                                <KeyboardAccelerator Key="Enter" Invoked="KeyboardAccelerator_Invoked"/>
                            </TextBox.KeyboardAccelerators>
                        </TextBox>
                        <Button x:Name="SendMessageButton" 
                                Grid.Column="1" 
                                Content="Send"
                                FontSize="15"
                                Command="{x:Bind vm.sendMessageCommand}" 
                                CommandParameter="{x:Bind vm.MessContent, Mode=OneWay}"
                                VerticalAlignment="Stretch" 
                                HorizontalAlignment="Stretch" 
                                Margin="0,5,5,5">
                            <Button.Background>
                                <helpers:AnimatedGradientBrush/>
                            </Button.Background>
                        </Button>
                    </Grid>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>
