<Page
    x:Class="IntranetUWP.Views.ChatHubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntranetUWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls" 
    xmlns:winui="using:Microsoft.UI.Xaml.Controls" 
    xmlns:DTO="using:IntranetUWP.Models" xmlns:media="using:Microsoft.UI.Xaml.Media"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <ResourceDictionary>
            <media:AcrylicBrush x:Key="CustomAcrylicInAppLuminosity" BackgroundSource="Backdrop"
            TintOpacity="0" TintLuminosityOpacity="0" TintColor="SkyBlue" FallbackColor="SkyBlue" />
        </ResourceDictionary>
    </Page.Resources>

    <SplitView x:Name="splitViewPane" DisplayMode="CompactInline" PanePlacement="Left"
               CompactPaneLength="48" HorizontalAlignment="Stretch" IsPaneOpen="True">
        <SplitView.Pane>
            <StackPanel>
                <controls:DockPanel HorizontalAlignment="Stretch" LastChildFill="True" VerticalAlignment="Top">
                    <Button Content="&#xE25C;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" HorizontalAlignment="Right" Background="Transparent" Click="HamburgerButton_Click"
                        FontSize="20" CornerRadius="0" controls:DockPanel.Dock="Left" Margin="5"/>
                    <TextBlock Text="Chat Hub" Margin="5" VerticalAlignment="Center" FontWeight="Bold" controls:DockPanel.Dock="Right"/>
                </controls:DockPanel>
                <controls:DockPanel HorizontalAlignment="Stretch" LastChildFill="True" VerticalAlignment="Top">
                    <Button x:Name="AddChannel" Content="&#xE109;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" HorizontalAlignment="Right" Background="Transparent"
                        FontSize="20" CornerRadius="0" controls:DockPanel.Dock="Left" Margin="5" Click="AddChannel_Click"/>
                    <TextBlock Text="Create Channel" Margin="5" VerticalAlignment="Center" controls:DockPanel.Dock="Right"/>
                </controls:DockPanel>
                <winui:TreeView x:Name="sampleTreeView" ItemsSource="{x:Bind DataSource}" HorizontalAlignment="Stretch" 
                                CanDrag="False" AllowDrop="False" CanReorderItems="False" CanDragItems="False">
                    <winui:TreeView.ItemContainerTransitions>
                        <TransitionCollection>
                            <ContentThemeTransition />
                            <AddDeleteThemeTransition />
                        </TransitionCollection>
                    </winui:TreeView.ItemContainerTransitions>
                    <winui:TreeView.ItemTemplate>
                        <DataTemplate x:DataType="local:ExplorerItem">
                            <winui:TreeViewItem AutomationProperties.Name="{x:Bind Name}" HorizontalAlignment="Stretch"
                                                ItemsSource="{x:Bind Children}" IsExpanded="True">
                                <controls:DockPanel LastChildFill="False" HorizontalAlignment="Stretch">
                                    <TextBlock Text="{x:Bind Name}" VerticalAlignment="Center" controls:DockPanel.Dock="Left" Margin="14,0,0,0"/>
                                    <Button Content="&#xE109;" FontFamily="Segoe MDL2 Assets" Visibility="{x:Bind IsVisisbleAddButton}"
                                            Margin="14,0,0,0" controls:DockPanel.Dock="Right" Background="Transparent"/>
                                </controls:DockPanel>
                            </winui:TreeViewItem>
                        </DataTemplate>
                    </winui:TreeView.ItemTemplate>
                </winui:TreeView>
            </StackPanel>
        </SplitView.Pane>
        <SplitView.Content>
            <Grid Background="{ThemeResource SystemControlAcrylicWindowBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Ellipse Width="400" Height="400" Fill="{ThemeResource SystemAccentColor}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,-200,-200,0"/>
                <Ellipse x:Name="BottomRightEllipse" Width="400" Height="400" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                    <Ellipse.Fill>
                        <SolidColorBrush x:Name="BottomRightEllipseColor" Color="White"/>
                    </Ellipse.Fill>
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="TranslateEllipsePosition"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BottomRightEllipseColor"
                                                    Storyboard.TargetProperty="Fill.Color"
                                                    To="#ec82fe" Duration="0:0:3" AutoReverse="True" RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="TranslateEllipsePosition" Storyboard.TargetProperty="Y" From="0" To="200">
                                        <DoubleAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="TranslateEllipsePosition" Storyboard.TargetProperty="X" From="0" To="200">
                                        <DoubleAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
                <Ellipse x:Name="TopLeftEllipse" Width="400" Height="400" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Ellipse.Fill>
                        <SolidColorBrush x:Name="TopLeftEllipseColor" Color="Gray"/>
                    </Ellipse.Fill>
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="TopLeftEllipsePosition"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="TopLeftEllipseColor"
                                                    Storyboard.TargetProperty="Fill.Color"
                                                    To="{ThemeResource SystemBaseLowColor}" Duration="0:0:3" AutoReverse="True" RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="TopLeftEllipsePosition" Storyboard.TargetProperty="Y" From="0" To="-200">
                                        <DoubleAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="TopLeftEllipsePosition" Storyboard.TargetProperty="X" From="0" To="-200">
                                        <DoubleAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
                <Ellipse x:Name="BottomLeftEllipse" Width="800" Height="800" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,-400">
                    <Ellipse.Fill>
                        <SolidColorBrush x:Name="BottomLeftEllipseColor" Color="#8e8afb"/>
                    </Ellipse.Fill>
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="BottomLeftEllipsePosition"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BottomLeftEllipseColor"
                                                    Storyboard.TargetProperty="Fill.Color"
                                                    To="{ThemeResource SystemBaseLowColor}" Duration="0:0:3" AutoReverse="True" RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="BottomLeftEllipsePosition" Storyboard.TargetProperty="X" From="0" To="-400">
                                        <DoubleAnimation.EasingFunction>
                                            <CircleEase EasingMode="EaseInOut" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
                <ListView x:Name="ChatList" ItemsSource="{x:Bind vm.ChatMessages, Mode=TwoWay}" SelectionMode="Extended"
                          LostFocus="ChatList_LostFocus">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel ItemsUpdatingScrollMode="KeepLastItemInView"
                              VerticalAlignment="Bottom"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.Header>
                        <TextBlock Text="IDev General Chat" FontSize="25" FontWeight="Bold" Margin="5">
                            <TextBlock.RenderTransform>
                                <TranslateTransform x:Name="TranslateTitle"/>
                            </TextBlock.RenderTransform>
                            <TextBlock.Triggers>
                                <EventTrigger>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="TranslateTitle" Storyboard.TargetProperty="Y" From="-200" To="0">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase EasingMode="EaseInOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="DTO:ChatMessageDTO">
                            <ListViewItem HorizontalAlignment="{x:Bind IsFromSelf, Converter={StaticResource BoolToFrameworkAlignmentConverter}}"
                                          HorizontalContentAlignment="Left" Margin="5">
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,10" CornerRadius="5"
                                          Background="{ThemeResource CustomAcrylicInAppLuminosity}">
                                    <PersonPicture ProfilePicture="{x:Bind ProfilePic, Converter={StaticResource StringToImageSourceConverter}}" 
                                                   VerticalAlignment="Top" Width="50" Margin="5"
                                                   Visibility="{x:Bind IsFromSelf, Converter={StaticResource ReverseBoolToVisibilityConverter}}"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind UserName}" FontWeight="Bold" TextDecorations="Underline" Margin="5,5,5,0"
                                                       HorizontalAlignment="{x:Bind IsFromSelf, Converter={StaticResource BoolToFrameworkAlignmentConverter}}"/>
                                        <TextBlock Text="{x:Bind MessageContent}" TextWrapping="WrapWholeWords" 
                                                       IsTextSelectionEnabled="True"
                                                       MaxWidth="700" Margin="15,5,15,0"
                                                       HorizontalAlignment="{x:Bind IsFromSelf, Converter={StaticResource BoolToFrameworkAlignmentConverter}}"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="{x:Bind IsFromSelf, Converter={StaticResource BoolToFrameworkAlignmentConverter}}">
                                            <SymbolIcon Symbol="Clock" VerticalAlignment="Bottom" Margin="5"/>
                                            <TextBlock VerticalAlignment="Bottom" Text="{x:Bind SentTime}" Margin="0,5,5,5"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <PersonPicture ProfilePicture="{x:Bind ProfilePic, Converter={StaticResource StringToImageSourceConverter}}" 
                                                   VerticalAlignment="Top" Width="50" Margin="5" 
                                                   Visibility="{x:Bind IsFromSelf, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>
                            </ListViewItem>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Grid VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="MessageTextBox" PlaceholderText="Text message" Text="{x:Bind vm.MessContent, Mode=TwoWay}"
                             HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" 
                             Background="{ThemeResource SystemControlAcrylicElementBrush}">
                        <TextBox.KeyboardAccelerators>
                            <KeyboardAccelerator Key="Enter" Invoked="KeyboardAccelerator_Invoked"/>
                        </TextBox.KeyboardAccelerators>
                    </TextBox>
                    <Button x:Name="SendMessageButton" Grid.Column="1" Content="Send"
                            Background="{ThemeResource SystemControlAcrylicElementBrush}"
                            Command="{x:Bind vm.sendMessageCommand}" CommandParameter="{x:Bind vm.MessContent, Mode=OneWay}"
                            VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,5,5,5"/>
                </Grid>
            </Grid>
        </SplitView.Content>
    </SplitView>
</Page>
